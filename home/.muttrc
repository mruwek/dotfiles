# -*- muttrc -*-
#
# rc file for mutt

set mbox_type=Maildir
set timeout=20
set mail_check=60
set imap_keepalive=300
set mask="!^\\.[^.]"
set record="=Sent"
set postponed="=Drafts"
set editor="vim -u ~/.mutt/vimrc"
set nobeep
set edit_headers
set date_format="%d.%m.%Y %H:%M"
set index_format="%2C %Z |%d| %-15.15F (%?l?%4l&%4c?) %s"
set forward_format="Fwd: %s"
set sendmail="~/bin/msmtp"
set use_from=yes
set envelope_from=yes
set header_cache="~/mail/cache/"
set message_cachedir="~/mail/cache/"
set send_charset="utf-8"
unset pipe_decode
set delete=yes

set encode_from
set signature='~/.signature'    # signature file
fcc-hook . "=Sent"              # the file to copy sent messages
set metoo=no

set pager_index_lines=9
set assumed_charset="latin2"

# text/html
set implicit_autoview
auto_view text/html
alternative_order text/plain text/html
set wrap=80
unset markers
set smart_wrap
unset wait_key

# sidebar
set sidebar_visible
set sidebar_on_right
set sidebar_width=16
set sidebar_short_path
set sidebar_folder_indent
set mail_check_stats
bind index,pager \Cj sidebar-next
bind index,pager \Ck sidebar-prev
bind index,pager \Co sidebar-open
bind index,pager B sidebar-toggle-visible

# customize the pager
bind pager K previous-line
bind pager J next-line

# threading
set sort=threads
set sort_aux=last-date-sent

set query_command = "goobook query %s"
#set query_command = "abook --mutt-query %s"
#set query_command = "google contacts list '(?i).*%s'"
#set query_command = "lbdbq '%s'"

source ~/.mutt/private # server, login, pass, my_hdr, alternates
source ~/.mutt/mailboxes
source ~/.mutt/headers
source ~/.mutt/folder-hooks
source ~/.mutt/lists
source ~/.mutt/gpg
source ~/.mutt/colours
source ~/.mutt/macros
