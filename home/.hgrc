[ui]
username = ... <-@->
ssh = ssh -C
merge =vimdiff

[merge-tools]
vimdiff.args = $output $other

[extensions]
color =
record =
graphlog =
hgk =
pager =
rebase =
histedit =
strip =

[hgk]
path = /usr/bin/hgview

[hgview]
interface = curses

[color]
diff.diffline = none
diff.file_a = none
status.modified = magenta bold
status.added = green bold
status.removed = red bold
status.deleted = cyan bold
status.unknown = blue bold
status.ignored = black bold

[pager]
pager = LESS='FSRX' less
attend = annotate, diff, glog, log, incoming, help
