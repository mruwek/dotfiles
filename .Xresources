!
! ~/.Xresources
!

Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

Xcursor.theme:  Vanilla-DMZ

xterm*background:   black
xterm*foreground:   white
xterm*faceName:     Terminus
xterm*faceSize:     14

URxvt.imLocale:         pl_PL.UTF-8
URxvt.scrollBar:        false
URxvt.saveLines:        5000
URxvt.urlLauncher:      firefox
URxvt.cursorBlink:      true
URxvt.geometry:         85x21
URxvt.font:             xft:Terminus:pixelsize=16
URxvt.boldFont:         xft:Terminus:bold:pixelsize=16
URxvt.background:       #000000
URxvt.foreground:       #ffffff
URxvt.tintColor:        #d9d7d1
URxvt.externalBorder:   .5
URxvt.borderColor:      #acacac
URxvt.termName:         rxvt-unicode256

stjerm.key:         grave
stjerm.mod:         windows
stjerm.width:       1600
stjerm.height:      430
stjerm.autohide:    false
stjerm.font:        Terminus 14
