holdconnectionopen = no
nametrans = lambda foldername: re.sub('^Drafts', '_Robocze', re.sub('^Trash', '_Kosz', (re.sub('^Sent', '_Wys≈Çane', re.sub('^INBOX', '_Odebrane', foldername)))))
