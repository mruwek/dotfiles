[topydo]
filename = ~/Dropbox/todo/todo.txt
archive_filename = ~/Dropbox/todo/done.txt
identifiers = text
backup = 5
default_command = top
colors = 1

[ls]
list_format = %Z%Z%Z |%I| %x %{(}p{)} %s %{due:}d %{t:}t %k

[dep]
append_parent_projects = 1
append_parent_contexts = 1

[colorscheme]
priority_colors = A:9,B:5,C:6,D:2,E:4
context_color = 3
link_color = 12
metadata_color = 22
project_color = 48

[aliases]
cmok = do -e buziaka Dorotce
dy≈ºur = add -f ~/Dropbox/todo/dyzur.txt
next = ls -n 1 -F '|%I| %x %{(}p{)} %S %k\t%{(}h{)}'
pp = postpone
pps = postpone -s
showall = ls -x
top = ls -F '%Z%Z%Z |%I| %x %{(}p{)} %S %k\t%{(}h{)}' -n 15
unpri = ls (<Z)
