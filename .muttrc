# -*- muttrc -*-
#
# rc file for mutt

set mbox_type=Maildir
set spoolfile="~/mail/
set folder="~/mail/"
set mask="!^\\.[^.]"
set record="=Sent"
set postponed="=Drafts"
set editor="vim"
set nobeep
set edit_headers
set date_format="%d.%m.%Y %H:%M"
set index_format="%2C %Z |%d| %-15.15F (%?l?%4l&%4c?) %s"
set sendmail="/usr/bin/msmtp"
set use_from=yes
set envelope_from=yes
set header_cache="~/mail/cache"
set locale="pl_PL.utf8"
set send_charset="utf-8"
unset pipe_decode
set encode_from
set pager_index_lines=9
set assumed_charset="latin2"
set delete=yes

set signature='~/.signature'    # signature file
my_hdr From: Jacek <--@--.pl>
my_hdr Reply-To: Jacek <--@--.pl>
fcc-hook . "=Sent"              # the file to copy sent messages

# auto_view
# text/html
set implicit_autoview
alternative_order text/plain text/html
set wrap=72
unset wait_key


# customize the pager
bind pager [ previous-line
bind pager ] next-line

# threading
set sort=threads

set query_command = "abook --mutt-query %s"
#set query_command = "lbdbq '%s'"

source ~/.mutt/mailboxes
source ~/.mutt/headers
source ~/.mutt/folder-hooks
source ~/.mutt/lists
source ~/.mutt/gpg
source ~/.mutt/colours
source ~/.mutt/macros
